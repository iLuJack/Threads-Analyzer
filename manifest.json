{
  "manifest_version": 3,
  "name": "Threads Post Stats",
  "version": "1.0",
  "description": "Fetch and display Threads post statistics",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "*://*.threads.net/*",
    "https://www.threads.net/*"
  ],
  "web_accessible_resources": [{
    "resources": ["stats.html", "stats.js", "popup.html", "popup.js"],
    "matches": ["*://*.threads.net/*"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
        "16": "favicon/favicon-16x16.png",
        "32": "favicon/favicon-32x32.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.threads.net/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "favicon/favicon-16x16.png",
    "32": "favicon/favicon-32x32.png"
  }
} 